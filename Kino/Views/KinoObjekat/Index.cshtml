@using Kino.Models
@model List<KinoObjekat>

@{
	ViewData["Title"] = "Index";
	var poruka = (string)ViewData["kina"];
	var porukasuccess = (string)TempData["porukasuccess"];
	var porukaerror = (string)TempData["porukaerror"];
}

<h1>Prikaz kino objekata</h1>
<label style="color:red">@porukaerror</label>
<label style="color:green">@porukasuccess</label>

<table class="table">
	<thead>
		<tr>
			<th>Naziv kina</th>
			<th>Adresa ulice</th>
			<th>Akcija</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var x in Model)
		{
			<tr>
				<td>@x.Naziv</td>

				<td>
					@if (x.Adresa == null)
					{
						<label>Nema adrese</label>
					}
					else
					{
						<label>@x.Adresa.NazivUlice</label>
					}
				</td>
				<td>
					<a asp-controller="KinoObjekat" asp-action="Obrisi" asp-route-KinoObjekatID="@x.KinoID" class="btn btn-danger">Obrisi</a>
					<a asp-controller="KinoObjekat" asp-action="Uredi" asp-route-KinoObjekatID="@x.KinoID" class="btn btn-info">Uredi</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<a href="/KinoObjekat/DodajForma" class="btn btn-success">Dodaj</a>
