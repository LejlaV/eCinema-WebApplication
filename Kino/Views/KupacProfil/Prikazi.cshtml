@using Kino.ViewModels
@model IEnumerable<KupacIndexVM>
@{
    ViewData["title"] = "Prikazi";
    Layout = "_Layout";
    //int brojacStranica = (int)TempData["trenutna"];
}

<h2 style="text-align: center; font-style:italic; ">Kupci</h2>
<br />
<br />

<table id="table_id" class="row-border" style="width:100%">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Grad</th>
            <th>Broj telefona</th>
            <th>Datum rodjenja</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Ime</td>
                <td>@x.Prezime</td>
                <td>@x.NazivGrada</td>
                <td>@x.BrojTelefona</td>
                <td>@x.Datum</td>
                <td>
                    <span id="confirmDeleteSpan_@x.KorisnikId" style="display:none">
                        <span>Da li ste sigurni da želite obrisati? </span>
                        <a asp-action="Obrisi" asp-route-id="@x.KorisnikId" class="btn btn-danger">DA</a>
                        <a href="#" class="btn btn-primary"
                           onclick="confirmDelete('@x.KorisnikId', false)">NE</a>
                    </span>

                    <span id="deleteSpan_@x.KorisnikId">
                        <a href="#" class="btn btn-danger"
                           onclick="confirmDelete('@x.KorisnikId', true)"><i class="far fa-trash-alt"></i> Obriši</a>
                    </span>
                </td>
            </tr>
        }
    </tbody>

</table>







