@using Kino.ViewModels
@model NagradnaIgraDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodaj nagradnu igru</h1>
<form asp-action="Snimi">
    <input type="hidden" asp-for="NagradnaIgra.KorisnikID" />
    <label class="label">Naziv </label>
    <input asp-for="NagradnaIgra.Naziv" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Naziv je obavezno polje')"
           oninput="setCustomValidity('')" />
    <label class="label">Opis </label>
    <input asp-for="NagradnaIgra.Opis" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Opis je obavezno polje')"
           oninput="setCustomValidity('')" />
    <label class="label">Početak </label>
    <input asp-for="NagradnaIgra.Pocetak" type="date" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Ovo je obavezno polje')"
           oninput="setCustomValidity('')" />
    <label class="label">Kraj </label>
    <input asp-for="NagradnaIgra.Kraj" type="date" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Ovo je obavezno polje')"
           oninput="setCustomValidity('')" />
    <input type="submit" value="Snimi" class="btn btn-danger" id="snimi" />
</form>

