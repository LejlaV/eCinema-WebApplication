@using Kino.ViewModels
@model ProjekcijaAddVM
@{
    ViewData["Title"] = "Add";
}

<h1>Dodavanje nove projekcije</h1>
<form class="form-group" asp-controller="Projekcija" asp-action="Save" method="post">
    <div class="form-group">
        <label>Odaberi film</label>
        <select asp-for="@Model.FilmID" asp-items="@Model.Film" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Odaberi dvoranu</label>
        <select asp-for="@Model.DvoranaID" asp-items="@Model.Dvorana" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Pocetak projekcije</label>
        <input type="datetime-local" asp-for="@Model.Pocetak" class="form-control" />
    </div>
    <div class="form-group">
        <label>Zavrsetak projekcije</label>
        <input type="datetime-local" asp-for="@Model.Kraj" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cijena</label>
        <input type="datetime" asp-for="@Model.Cijena" class="form-control" />
    </div>
	<input type="submit" value="Dodaj" class="btn btn-success" />
</form>

