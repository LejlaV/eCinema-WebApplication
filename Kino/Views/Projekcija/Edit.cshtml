@using Kino.ViewModels
@model ProjekcijaEditVM
@{
    ViewData["Title"] = "Edit";
}

<h1>Uredjivanje projekcije</h1>
<form class="form-group" asp-controller="Projekcija" asp-action="SaveEdit" method="post">
    <input asp-for="@Model.Id" hidden/>
    <div class="form-group">
        <label>Film</label>
        <input type="text" asp-for="@Model.Film" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label>Dvoranu</label>
        <input type="text" asp-for="@Model.Dvorana" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Pocetak projekcije</label>
        <input type="datetime-local" asp-for="@Model.Pocetak" class="form-control" />
    </div>
    <div class="form-group">
        <label>Zavrsetak projekcije</label>
        <input type="datetime-local" asp-for="@Model.Kraj" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cijena</label>
        <input type="text" asp-for="@Model.Cijena" class="form-control" />
    </div>
    <input type="submit" value="Sacuvaj" class="btn btn-success" />
</form>
