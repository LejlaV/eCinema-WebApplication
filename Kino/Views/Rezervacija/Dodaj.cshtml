@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodaj</h1>

<h4>RezervacijaAddVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Spasi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="RezervacijaID" class="control-label"></label>
            <input asp-for="RezervacijaID" class="form-control" />
            <span asp-validation-for="RezervacijaID" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="NazivFilma" class="control-label"></label>
                <input asp-for="NazivFilma" readonly class="form-control" />
                <span asp-validation-for="NazivFilma" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ProjekcijaID" class="control-label"></label>
                <input asp-for="ProjekcijaID" hidden class="form-control" />
                <span asp-validation-for="ProjekcijaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dvorana" class="control-label"></label>
                <input asp-for="Dvorana" readonly class="form-control" />
                <span asp-validation-for="Dvorana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DostupanBrojSjedista" class="control-label"><strong>Trenutno slobodnih sjedišta:</strong></label>
                <input asp-for="DostupanBrojSjedista" readonly class="form-control" />
                <span asp-validation-for="DostupanBrojSjedista" class="text-danger"></span>
            </div>
            @if (Model.DostupanBrojSjedista < 5)
            {
                if (Model.DostupanBrojSjedista == 4)
                {
                    <div class="form-group">
                        <label asp-for="BrojSjedista" class="control-label"></label>
                        <select asp-items="Model.BrojSjedista.Take(4)" asp-for="OdabraniBrojSjedista" class="form-control"> </select>
                        <span asp-validation-for="BrojSjedista" class="text-danger"></span>
                    </div>
                }
                else if (Model.DostupanBrojSjedista == 3)
                {
                    <div class="form-group">
                        <label asp-for="BrojSjedista" class="control-label"></label>
                        <select asp-items="Model.BrojSjedista.Take(3)" asp-for="OdabraniBrojSjedista" class="form-control"> </select>
                        <span asp-validation-for="BrojSjedista" class="text-danger"></span>
                    </div>
                }
                else if (Model.DostupanBrojSjedista == 2)
                {
                    <div class="form-group">
                        <label asp-for="BrojSjedista" class="control-label"></label>
                        <select asp-items="Model.BrojSjedista.Take(2)" asp-for="OdabraniBrojSjedista" class="form-control"> </select>
                        <span asp-validation-for="BrojSjedista" class="text-danger"></span>
                    </div>
                }
                else if (Model.DostupanBrojSjedista == 1)
                {
                    <div class="form-group">
                        <label asp-for="BrojSjedista" class="control-label"></label>
                        <select asp-items="Model.BrojSjedista.Take(1)" asp-for="OdabraniBrojSjedista" class="form-control"> </select>
                        <span asp-validation-for="BrojSjedista" class="text-danger"></span>
                    </div>
                }
                else if (Model.DostupanBrojSjedista == 0)
                {
                    <div class="form-group">
                        <label asp-for="BrojSjedista" class="control-label"></label>
                        <select asp-items="Model.BrojSjedista.Take(5)" asp-for="OdabraniBrojSjedista" class="form-control"> </select>
                        <span asp-validation-for="BrojSjedista" class="text-danger"></span>
                    </div>
                }
            }
            else
            {
                <div class="form-group">
                    <label asp-for="BrojSjedista" class="control-label"></label>
                    <select asp-items="Model.BrojSjedista" asp-for="OdabraniBrojSjedista" class="form-control"> </select>
                    <span asp-validation-for="BrojSjedista" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Cijena" class="control-label">(@Model.Cijena*@Model.OdabraniBrojSjedista)</label>
                <input asp-for="Cijena" readonly class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



